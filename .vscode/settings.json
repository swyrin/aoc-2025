{
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
    },
    "rust-analyzer.references.excludeTests": true,
    "rust-analyzer.testExplorer": true,
    "rust-analyzer.check.command": "clippy",
    "files.readonlyInclude": {
        // input
        "input/day_00*.txt": true,
        "input/day_01*.txt": true,
        "input/day_02*.txt": true,
        "input/day_03*.txt": true,
        "input/day_04*.txt": true,
        "input/day_05*.txt": true,
        "input/day_06*.txt": true,
        "input/day_07*.txt": true,
        "input/day_08*.txt": true,
        "input/day_09*.txt": true,
        "input/day_10*.txt": true,
        // code
        "src/bin/day_00/**": true,
        "src/bin/day_01/**": true,
        "src/bin/day_02/**": true,
        "src/bin/day_03/**": true,
        "src/bin/day_04/**": true,
        "src/bin/day_05/**": true,
        "src/bin/day_06/**": true,
        "src/bin/day_07/**": true,
        "src/bin/day_08/**": true,
        "src/bin/day_09/**": true,
        "src/bin/day_10/**": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "target/**": true
    },
    "editor.trimAutoWhitespace": false
}